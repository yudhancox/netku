<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Dramabos Netshort - Streaming Drama Pendek</title>
    
    <meta name="description" content="Nonton drama pendek terbaik kualitas HD gratis." />
    <meta name="keywords" content="drama pendek, netshort, streaming, movie" />
    <meta name="theme-color" content="#141414">

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <script>
    tailwind.config = {
        darkMode: 'class',
        theme: {
            extend: {
                colors: {
                    netflixRed: '#E50914', // Merah Khas Netflix
                    netflixDark: '#141414', // Background Utama
                    netflixCard: '#181818', // Warna Card
                    netflixGray: '#b3b3b3', // Warna Teks Secondary
                },
                fontFamily: {
                    sans: ['Inter', 'sans-serif'],
                },
                aspectRatio: {
                    'poster': '2 / 3',
                }
            }
        }
    }
    </script>

    <style>
        body {
            background-color: #141414; /* Default Dark */
            color: #ffffff;
            font-family: 'Inter', sans-serif;
        }

        /* Custom Scrollbar (Hidden but functional) */
        .hide-scroll::-webkit-scrollbar {
            display: none;
        }
        .hide-scroll {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        /* Filter Pills Style */
        .filter-btn {
            white-space: nowrap;
            padding: 8px 16px;
            border-radius: 9999px;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.3s ease;
            cursor: pointer;
            border: 1px solid rgba(255, 255, 255, 0.15);
            background-color: rgba(0, 0, 0, 0.3);
            color: #b3b3b3;
        }
        .filter-btn:hover {
            border-color: #fff;
            color: #fff;
        }
        .filter-btn.active {
            background-color: #E50914; /* Netflix Red */
            color: white;
            border-color: #E50914;
            font-weight: 700;
        }

        /* Card Hover Effects */
        .drama-card {
            transition: transform 0.3s ease, z-index 0s;
        }
        .drama-card:hover {
            transform: scale(1.05);
            z-index: 20;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }
        
        /* Play Icon Overlay */
        .play-overlay {
            opacity: 0;
            background: rgba(0,0,0,0.4);
            transition: opacity 0.3s ease;
        }
        .drama-card:hover .play-overlay {
            opacity: 1;
        }

        /* Header Gradient */
        .header-gradient {
            background: linear-gradient(to bottom, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.6) 50%, transparent 100%);
        }
        .glass-bg {
            background: rgba(20, 20, 20, 0.85);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        /* Animation */
        @keyframes fadeUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in-up {
            animation: fadeUp 0.5s ease forwards;
        }
    </style>
</head>
<body class="antialiased min-h-screen flex flex-col">
    
    <header class="fixed w-full top-0 z-50 transition-all duration-300 glass-bg">
        <div class="max-w-[1600px] mx-auto px-4 md:px-8 py-3 flex items-center justify-between gap-4">
            
            <a href="/" class="flex-shrink-0 flex items-center gap-1 group">
                <span class="text-2xl md:text-3xl font-extrabold text-netflixRed tracking-tighter">DRAMABOS</span>
            </a>

            <div class="flex-1 max-w-xl mx-auto hidden md:block relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-search text-gray-400"></i>
                </div>
                <input id="searchInput" type="text" placeholder="Judul, orang, genre..." 
                    class="w-full bg-black/40 border border-gray-700 text-white text-sm rounded-full focus:ring-2 focus:ring-netflixRed focus:border-transparent block w-full pl-10 p-2.5 placeholder-gray-500 transition-all">
                <button id="clearBtn" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-white hidden">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="flex items-center gap-4">
                <button class="md:hidden text-white text-lg" onclick="document.getElementById('mobileSearch').classList.toggle('hidden')">
                    <i class="fas fa-search"></i>
                </button>
                <div class="w-8 h-8 rounded bg-gradient-to-br from-red-600 to-red-900 flex items-center justify-center text-xs font-bold shadow-lg cursor-pointer">
                    ID
                </div>
            </div>
        </div>

        <div id="mobileSearch" class="hidden px-4 pb-3 md:hidden bg-netflixDark border-b border-gray-800">
             <input id="searchInputMobile" type="text" placeholder="Cari drama..." 
                    class="w-full bg-gray-800 text-white rounded-md p-2 text-sm focus:outline-none focus:ring-1 focus:ring-netflixRed">
        </div>
    </header>

    <div id="searchOverlay" class="fixed inset-0 bg-black/90 z-[45] hidden pt-20 px-4 overflow-y-auto backdrop-blur-sm">
        <div class="max-w-4xl mx-auto">
            <div class="flex justify-between items-center mb-4 text-gray-400 text-sm uppercase font-bold tracking-widest">
                <span>Hasil Pencarian</span>
                <button onclick="closeSearch()" class="hover:text-white"><i class="fas fa-times text-xl"></i></button>
            </div>
            <div id="loadingSearch" class="hidden text-center py-10">
                <div class="w-10 h-10 border-4 border-netflixRed border-t-transparent rounded-full animate-spin mx-auto"></div>
            </div>
            <div id="searchResults" class="grid grid-cols-1 md:grid-cols-2 gap-4 pb-10"></div>
        </div>
    </div>

    <main class="flex-grow pt-[80px] px-4 md:px-8 max-w-[1600px] mx-auto w-full pb-20">

        <div class="mb-8 sticky top-[70px] z-30 py-2 -mx-4 px-4 md:mx-0 md:px-0 transition-colors" style="background: linear-gradient(180deg, #141414 0%, rgba(20,20,20,0.9) 80%, transparent 100%);">
            
            <div class="flex flex-col gap-3">
                <div class="flex gap-3 overflow-x-auto hide-scroll pb-1 items-center">
                    <span class="text-xs font-bold text-gray-500 uppercase mr-2 tracking-wider flex-shrink-0">Kategori</span>
                    <% constants.tag.forEach(t => { %>
                        <button class="filter-btn" data-type="tagId" data-value="<%= t.labelName %>">
                            <%= t.labelName %>
                        </button>
                    <% }) %>
                </div>
                
                <div class="flex gap-3 overflow-x-auto hide-scroll pb-1 items-center border-t border-white/5 pt-2">
                    <span class="text-xs font-bold text-gray-500 uppercase mr-2 tracking-wider flex-shrink-0">Filter</span>
                    <% constants.region.forEach(r => { %>
                        <button class="filter-btn" data-type="regionKey" data-value="<%= r.key %>"><%= r.value %></button>
                    <% }) %>
                    <div class="w-px h-4 bg-gray-700 mx-2"></div>
                    <% constants.orderMode.forEach(o => { %>
                        <button class="filter-btn" data-type="orderMode" data-value="<%= o.key %>"><%= o.value %></button>
                    <% }) %>
                </div>
            </div>
        </div>

        <div id="drama-list" class="grid grid-cols-3 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-3 md:gap-4 lg:gap-6">
            <% dramas.forEach(d => {
                const slug = d.shortPlayName.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-+|-+$/g, '');
            %>
            <div class="drama-card relative group rounded-md cursor-pointer bg-netflixCard fade-in-up"
                 onclick="window.location.href='/api/<%= slug %>/<%= d.shortPlayId %>'">
                
                <div class="relative aspect-poster rounded-md overflow-hidden bg-gray-800">
                    <img src="<%= d.shortPlayCover %>" loading="lazy" 
                         onerror="this.src='https://placehold.co/400x600/1f1f1f/b3b3b3?text=No+Image'" 
                         class="w-full h-full object-cover transition-opacity duration-300">
                    
                    <div class="play-overlay absolute inset-0 flex items-center justify-center z-10">
                        <i class="fas fa-play-circle text-5xl text-white drop-shadow-lg transform scale-90 group-hover:scale-100 transition duration-300"></i>
                    </div>

                    <% if (d.scriptName) { %>
                        <div class="absolute top-0 right-0 bg-netflixRed text-white text-[10px] font-bold px-2 py-0.5 rounded-bl-lg shadow-md z-20">
                            <%= d.scriptName %>
                        </div>
                    <% } %>
                    
                    <div class="absolute inset-x-0 bottom-0 h-1/2 bg-gradient-to-t from-black via-black/60 to-transparent pointer-events-none"></div>

                    <div class="absolute bottom-2 left-2 right-2 text-white text-xs font-medium z-20 flex justify-between items-end">
                        <span class="bg-white/20 backdrop-blur-md px-1.5 py-0.5 rounded text-[10px]">HD</span>
                    </div>
                </div>

                <div class="mt-2 px-1">
                    <h3 class="text-sm font-semibold text-gray-100 leading-tight line-clamp-1 group-hover:text-netflixRed transition-colors">
                        <%= d.shortPlayName %>
                    </h3>
                    <div class="flex items-center gap-2 mt-1 text-xs text-gray-500">
                        <span><%= d.labelArray ? d.labelArray[0] : 'Drama' %></span>
                        <span class="text-[8px]">•</span>
                        <span>Full Episode</span>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <div id="loadMoreContainer" class="mt-12 text-center">
            <div id="loading" class="hidden inline-block w-8 h-8 border-4 border-netflixRed border-t-transparent rounded-full animate-spin"></div>
            
            <button id="loadMore" class="group relative px-8 py-3 bg-gray-800 hover:bg-gray-700 text-white text-sm font-semibold rounded-full transition-all duration-300 flex items-center gap-2 mx-auto border border-gray-700">
                <span>Muat Lebih Banyak</span>
                <i class="fas fa-chevron-down group-hover:animate-bounce"></i>
            </button>
        </div>

    </main>

    <footer class="border-t border-gray-800 bg-black py-10 text-center text-sm text-gray-500">
        <div class="max-w-4xl mx-auto px-4">
            <p class="mb-4">&copy; <%= new Date().getFullYear() %> Dramabos Netshort. All rights reserved.</p>
            <div class="flex justify-center gap-4 text-xs uppercase tracking-widest">
                <a href="#" class="hover:text-white">Terms</a>
                <a href="#" class="hover:text-white">Privacy</a>
                <a href="#" class="hover:text-white">Contact</a>
            </div>
        </div>
    </footer>

    <script>
    // --- STATE VARIABLES ---
    let currentOffset = 1;
    let maxOffset = <%= maxOffset %>;
    let lastParams = new URLSearchParams();
    let isFetching = false;

    // --- DOM ELEMENTS ---
    const list = document.getElementById("drama-list");
    const loadBtn = document.getElementById("loadMore");
    const loadContainer = document.getElementById("loadMoreContainer");
    const loading = document.getElementById("loading");

    // --- INITIALIZATION ---
    document.addEventListener("DOMContentLoaded", () => {
        // Set default active buttons based on server rendered state
        ["regionKey", "audioKey", "tagId", "orderMode"].forEach(type => {
            const firstBtn = document.querySelector(`.filter-btn[data-type='${type}']`);
            if (firstBtn) {
                // If it's a specific filter logic, you might want to check the URL or default vars
                // For now, let's just ensure we capture the clicked state logic
                // Or simulate click on default if needed
            }
        });
        
        // Initial Param Setup
        lastParams.set("offset", currentOffset);

        setupFilterBtns();
        setupSearch();
    });

    // --- FILTER FUNCTIONALITY ---
    function setupFilterBtns() {
        document.querySelectorAll(".filter-btn").forEach(btn => {
            btn.addEventListener("click", async () => {
                const type = btn.dataset.type;
                const value = btn.dataset.value;

                // UI Update: Remove active class from siblings, add to clicked
                document.querySelectorAll(`.filter-btn[data-type='${type}']`).forEach(b => b.classList.remove('active'));
                btn.classList.add('active');

                // Logic Update
                lastParams.set(type, value);
                currentOffset = 1;
                lastParams.set("offset", currentOffset);
                
                await fetchDramas(lastParams, false);
                
                // Smooth scroll top slightly
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        });
    }

    // --- FETCH DATA (AJAX) ---
    async function fetchDramas(params, append = false) {
        if (isFetching) return;
        isFetching = true;

        loading.classList.remove("hidden");
        loadBtn.classList.add("hidden");

        try {
            const res = await fetch("/filter?" + params.toString());
            const data = await res.json();

            if (data.success) {
                maxOffset = data.maxOffset;
                const dramas = data.dramas || [];

                if (!append) list.innerHTML = "";

                if (dramas.length === 0 && !append) {
                    list.innerHTML = `
                        <div class="col-span-full text-center py-20">
                            <i class="fas fa-film text-4xl text-gray-700 mb-4"></i>
                            <p class="text-gray-400 text-lg">Tidak ada drama ditemukan.</p>
                        </div>`;
                }

                dramas.forEach(d => {
                    const slug = d.shortPlayName.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-+|-+$/g, '');
                    const labels = d.labelArray ? d.labelArray[0] : 'Drama';
                    const scriptBadge = d.scriptName ? 
                        `<div class="absolute top-0 right-0 bg-netflixRed text-white text-[10px] font-bold px-2 py-0.5 rounded-bl-lg shadow-md z-20">${d.scriptName}</div>` : '';

                    const html = `
                    <div class="drama-card relative group rounded-md cursor-pointer bg-netflixCard fade-in-up" onclick="window.location.href='/api/${slug}/${d.shortPlayId}'">
                        <div class="relative aspect-poster rounded-md overflow-hidden bg-gray-800">
                            <img src="${d.shortPlayCover}" loading="lazy" onerror="this.src='https://placehold.co/400x600/1f1f1f/b3b3b3?text=No+Image'" class="w-full h-full object-cover transition-opacity duration-300">
                            <div class="play-overlay absolute inset-0 flex items-center justify-center z-10">
                                <i class="fas fa-play-circle text-5xl text-white drop-shadow-lg transform scale-90 group-hover:scale-100 transition duration-300"></i>
                            </div>
                            ${scriptBadge}
                            <div class="absolute inset-x-0 bottom-0 h-1/2 bg-gradient-to-t from-black via-black/60 to-transparent pointer-events-none"></div>
                            <div class="absolute bottom-2 left-2 right-2 text-white text-xs font-medium z-20 flex justify-between items-end">
                                <span class="bg-white/20 backdrop-blur-md px-1.5 py-0.5 rounded text-[10px]">HD</span>
                            </div>
                        </div>
                        <div class="mt-2 px-1">
                            <h3 class="text-sm font-semibold text-gray-100 leading-tight line-clamp-1 group-hover:text-netflixRed transition-colors">${d.shortPlayName}</h3>
                            <div class="flex items-center gap-2 mt-1 text-xs text-gray-500">
                                <span>${labels}</span>
                                <span class="text-[8px]">•</span>
                                <span>Full</span>
                            </div>
                        </div>
                    </div>`;
                    
                    list.insertAdjacentHTML("beforeend", html);
                });

                if (currentOffset >= maxOffset) {
                    loadBtn.remove(); // No more data
                } else {
                    loadBtn.classList.remove("hidden");
                }
            }
        } catch (err) {
            console.error(err);
        } finally {
            isFetching = false;
            loading.classList.add("hidden");
        }
    }

    // --- LOAD MORE EVENT ---
    loadBtn.addEventListener("click", () => {
        currentOffset++;
        lastParams.set("offset", currentOffset);
        fetchDramas(lastParams, true);
    });

    // --- SEARCH FUNCTIONALITY ---
    function setupSearch() {
        const inputs = [document.getElementById("searchInput"), document.getElementById("searchInputMobile")];
        const overlay = document.getElementById("searchOverlay");
        const resultsDiv = document.getElementById("searchResults");
        const loadingDiv = document.getElementById("loadingSearch");
        let timer;

        // Function to close search
        window.closeSearch = () => {
            overlay.classList.add("hidden");
            document.body.style.overflow = "auto";
        };

        inputs.forEach(input => {
            if(!input) return;

            input.addEventListener("input", (e) => {
                const query = e.target.value.trim();
                clearTimeout(timer);

                if (!query) {
                    closeSearch();
                    return;
                }

                overlay.classList.remove("hidden");
                document.body.style.overflow = "hidden"; // Prevent background scroll
                loadingDiv.classList.remove("hidden");
                resultsDiv.innerHTML = "";

                timer = setTimeout(async () => {
                    try {
                        const res = await fetch(`/search?q=${encodeURIComponent(query)}`);
                        const data = await res.json();
                        loadingDiv.classList.add("hidden");

                        if (data.success && data.data.length > 0) {
                            resultsDiv.innerHTML = data.data.map(item => {
                                const slug = item.name.toLowerCase().replace(/[^a-z0-9]+/g, '-');
                                return `
                                <a href="/api/${slug}/${item.id}" class="flex gap-3 bg-gray-800 p-3 rounded hover:bg-gray-700 transition">
                                    <img src="${item.cover}" class="w-16 h-24 object-cover rounded bg-black">
                                    <div class="flex-1">
                                        <h4 class="font-bold text-white text-sm line-clamp-1">${item.name}</h4>
                                        <p class="text-xs text-gray-400 mt-1 line-clamp-2">${item.intro || 'Sinopsis tidak tersedia.'}</p>
                                        <div class="mt-2">
                                            <span class="text-[10px] bg-red-900 text-red-200 px-1.5 py-0.5 rounded">${item.labels || 'Drama'}</span>
                                        </div>
                                    </div>
                                </a>`;
                            }).join("");
                        } else {
                            resultsDiv.innerHTML = `<div class="col-span-full text-center text-gray-400 mt-10">Tidak ada hasil untuk "${query}"</div>`;
                        }
                    } catch (e) {
                        loadingDiv.classList.add("hidden");
                        console.error(e);
                    }
                }, 500); // Debounce 500ms
            });
        });
    }
    </script>
</body>
</html>
