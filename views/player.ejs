<script>
    document.addEventListener("DOMContentLoaded", () => {
        let playerInstance = null;
        let currentVideoUrl = "";
        let currentSubtitleUrl = "";
        
        const defaultSubSettings = {
            fontSize: 18,       
            bottom: 80,         
            color: '#ffffff',   
            bgOpacity: 0.0      
        };

        let subSettings = JSON.parse(localStorage.getItem('xgSubSettings')) || { ...defaultSubSettings, bgOpacity: 0.5 }; 

        function applySubtitleStyle() {
            const subEl = document.getElementById('subtitle');
            if(!subEl) return;

            subEl.style.fontSize = `${subSettings.fontSize}px`;
            subEl.style.bottom = `${subSettings.bottom}px`;
            subEl.style.color = subSettings.color;
        }

        function getSpanStyle() {
            return `background-color: rgba(0, 0, 0, ${subSettings.bgOpacity}); color: ${subSettings.color};`;
        }

        function saveSubSettings() {
            localStorage.setItem('xgSubSettings', JSON.stringify(subSettings));
            applySubtitleStyle();
        }

        function parseVTT(data) {
            const pattern = /(\d{2}:\d{2}:\d{2}\.\d{3}) --> (\d{2}:\d{2}:\d{2}\.\d{3})\s+([\s\S]*?)(?=\n{2,}|$)/g;
            const result = [];
            let match;
            while ((match = pattern.exec(data)) !== null) {
                result.push({
                    start: toSeconds(match[1]),
                    end: toSeconds(match[2]),
                    text: match[3].replace(/\n/g, "<br>")
                });
            }
            return result;
        }

        function toSeconds(time) {
            const [h, m, s] = time.split(':');
            const [sec, ms] = s.split('.');
            return parseInt(h) * 3600 + parseInt(m) * 60 + parseFloat(sec + '.' + ms);
        }

        async function loadSubtitles(url, player) {
            const subtitleEl = document.getElementById('subtitle');
            
            if(!url) {
                 subtitleEl.innerHTML = "";
                 return;
            }
            try {
                const res = await fetch(url);
                if(!res.ok) throw new Error("Gagal fetch subtitle");
                const text = await res.text();
                const subtitles = parseVTT(text);
                
                applySubtitleStyle();

                player.on('timeupdate', () => {
                    const t = player.currentTime;
                    const current = subtitles.find(s => t >= s.start && t <= s.end);
                    if (current) {
                        subtitleEl.innerHTML = `<span style="${getSpanStyle()}">${current.text}</span>`;
                    } else {
                        subtitleEl.innerHTML = "";
                    }
                });
                
            } catch(e) {
                console.error("Error loading subtitles:", e);
                subtitleEl.innerHTML = "";
            }
        }

        function initXGPlayer(url, poster, subtitle) {
            currentVideoUrl = url;
            currentSubtitleUrl = subtitle;
            
            document.getElementById('subtitle').innerHTML = "";

            if (playerInstance) {
                playerInstance.destroy();
                playerInstance = null;
            }

            const playerDiv = document.getElementById('xgplayer');
            if(playerDiv) playerDiv.innerHTML = '';

            playerInstance = new Player({
                id: 'xgplayer',
                url: url,
                poster: poster,
                width: '100%',
                height: '100%',
                autoplay: true,
                muted: true,
                playsinline: true, 
                playbackRate: [0.5, 1, 1.25, 1.5, 2],
                controls: true,
                ignores: ['time'], 
                videoInit: true
            });

            if (subtitle) {
                loadSubtitles(subtitle, playerInstance);
            }
        }
        
        const initialVideoUrl = "<%- playVoucher || '' %>";
        const initialCover = "<%- shortPlayCover %>";
        const initialSub = "<%- subtitleUrl || '' %>";
        
        if(initialVideoUrl) {
            initXGPlayer(initialVideoUrl, initialCover, initialSub);
        }

        // Subtitle Settings UI
        const subModal = document.getElementById('subtitleSettingsModal');
        const btnOpenSub = document.getElementById('openSubSettings');
        const btnCloseSub = document.getElementById('closeSubSettings');
        
        const inpSize = document.getElementById('inputFontSize');
        const inpPos = document.getElementById('inputPosBottom');
        const inpColor = document.getElementById('inputTextColor');
        const inpBg = document.getElementById('inputBgOpacity');
        const btnReset = document.getElementById('resetSubSettings');

        const lblSize = document.getElementById('valFontSize');
        const lblPos = document.getElementById('valPosBottom');
        const lblColor = document.getElementById('valTextColor');
        const lblBg = document.getElementById('valBgOpacity');

        function updateModalInputs() {
            inpSize.value = subSettings.fontSize;
            lblSize.textContent = `${subSettings.fontSize}px`;
            inpPos.value = subSettings.bottom;
            lblPos.textContent = `${subSettings.bottom}px`;
            inpColor.value = subSettings.color;
            lblColor.textContent = subSettings.color;
            inpBg.value = subSettings.bgOpacity;
            lblBg.textContent = `${Math.round(subSettings.bgOpacity * 100)}%`;
        }

        inpSize.addEventListener('input', (e) => {
            subSettings.fontSize = parseInt(e.target.value);
            lblSize.textContent = `${subSettings.fontSize}px`;
            saveSubSettings();
        });

        inpPos.addEventListener('input', (e) => {
            subSettings.bottom = parseInt(e.target.value);
            lblPos.textContent = `${subSettings.bottom}px`;
            saveSubSettings();
        });

        inpColor.addEventListener('input', (e) => {
            subSettings.color = e.target.value;
            lblColor.textContent = subSettings.color;
            saveSubSettings();
        });

        inpBg.addEventListener('input', (e) => {
            subSettings.bgOpacity = parseFloat(e.target.value);
            lblBg.textContent = `${Math.round(subSettings.bgOpacity * 100)}%`;
            saveSubSettings();
        });

        btnReset.addEventListener('click', () => {
            subSettings = { ...defaultSubSettings, bgOpacity: 0.5 };
            saveSubSettings();
            updateModalInputs();
        });

        btnOpenSub.addEventListener('click', () => {
            updateModalInputs();
            subModal.classList.remove('hidden');
            subModal.classList.add('flex');
        });

        btnCloseSub.addEventListener('click', () => {
            subModal.classList.add('hidden');
            subModal.classList.remove('flex');
        });

        // Download Modal
        const downloadModal = document.getElementById('downloadModal');
        const downloadBtn = document.getElementById('downloadBtn');
        const closeDownloadModal = document.getElementById('closeDownloadModal');
        const downloadVideoLink = document.getElementById('downloadVideoLink');
        const downloadSubtitleLink = document.getElementById('downloadSubtitleLink');

        downloadBtn.addEventListener('click', () => {
            downloadVideoLink.href = currentVideoUrl ? `/download/api?url=${encodeURIComponent(currentVideoUrl)}` : '#';
            downloadSubtitleLink.href = currentSubtitleUrl ? `/download/api/sub?url=${encodeURIComponent(currentSubtitleUrl)}` : '#';
            downloadModal.classList.remove('hidden');
            downloadModal.classList.add('flex');
        });

        closeDownloadModal.addEventListener('click', () => {
            downloadModal.classList.add('hidden');
            downloadModal.classList.remove('flex');
        });

        // Share Button
        const shareBtn = document.getElementById('shareBtn');
        shareBtn.addEventListener('click', async () => {
            if (navigator.share) {
                try {
                    await navigator.share({
                        title: '<%= shortPlayName %>',
                        url: window.location.href
                    });
                } catch (err) {
                    console.log('Share cancelled');
                }
            } else {
                navigator.clipboard.writeText(window.location.href);
                alert('Link disalin!');
            }
        });

        // Episode Modal (Mobile)
        const episodeModal = document.getElementById('episodeModalMobileNew');
        const openModalBtns = document.querySelectorAll('.openModal');
        const closeModalBtn = document.getElementById('closeModalMobileNew');

        openModalBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                episodeModal.style.bottom = '0';
            });
        });

        closeModalBtn.addEventListener('click', () => {
            episodeModal.style.bottom = '-100%';
        });
    });
</script>
