            const subtitleEl = document.getElementById('subtitle');
            if (!url) { subtitleEl.innerHTML = ""; return; }
            try {
                const res = await fetch(url);
                if (!res.ok) throw new Error("Gagal fetch subtitle");
                const text = await res.text();
                const subtitles = parseVTT(text);
                applySubtitleStyle();
                player.on('timeupdate', () => {
                    const t = player.currentTime;
                    const current = subtitles.find(s => t >= s.start && t <= s.end);
                    subtitleEl.innerHTML = current ? `<span style="${getSpanStyle()}">${current.text}</span>` : "";
                });
            } catch (e) {
                console.error("Error loading subtitles:", e);
                subtitleEl.innerHTML = "";
            }
        }

        function initXGPlayer(url, poster, subtitle) {
            currentVideoUrl = url;
            currentSubtitleUrl = subtitle;
            document.getElementById('subtitle').innerHTML = "";

            if (playerInstance) { playerInstance.destroy(); playerInstance = null; }
            const playerDiv = document.getElementById('xgplayer');
            if (playerDiv) playerDiv.innerHTML = '';

            playerInstance = new Player({
                id: 'xgplayer',
                url: url,
                poster: poster,
                width: '100%',
                height: '100%',
                autoplay: true,
                muted: true,
                playsinline: true,
                playbackRate: [0.5, 1, 1.25, 1.5, 2],
                controls: true,
                ignores: ['time'],
                videoInit: true
            });

            if (subtitle) loadSubtitles(subtitle, playerInstance);
        }

        const initialVideoUrl = "<%- playVoucher || '' %>";
        const initialCover = "<%- shortPlayCover %>";
        const initialSub = "<%- subtitleUrl || '' %>";
        if (initialVideoUrl) initXGPlayer(initialVideoUrl, initialCover, initialSub);

        // Subtitle Settings
        const subModal = document.getElementById('subtitleSettingsModal');
        const inpSize = document.getElementById('inputFontSize');
        const inpPos = document.getElementById('inputPosBottom');
        const inpColor = document.getElementById('inputTextColor');
        const inpBg = document.getElementById('inputBgOpacity');
        const lblSize = document.getElementById('valFontSize');
        const lblPos = document.getElementById('valPosBottom');
        const lblColor = document.getElementById('valTextColor');
        const lblBg = document.getElementById('valBgOpacity');

        function updateModalInputs() {
            inpSize.value = subSettings.fontSize;
            lblSize.textContent = `${subSettings.fontSize}px`;
            inpPos.value = subSettings.bottom;
            lblPos.textContent = `${subSettings.bottom}px`;
            inpColor.value = subSettings.color;
            lblColor.textContent = subSettings.color.toUpperCase();
            inpBg.value = subSettings.bgOpacity;
            lblBg.textContent = `${Math.round(subSettings.bgOpacity * 100)}%`;
        }

        inpSize.addEventListener('input', e => { subSettings.fontSize = parseInt(e.target.value); lblSize.textContent = `${subSettings.fontSize}px`; saveSubSettings(); });
        inpPos.addEventListener('input', e => { subSettings.bottom = parseInt(e.target.value); lblPos.textContent = `${subSettings.bottom}px`; saveSubSettings(); });
        inpColor.addEventListener('input', e => { subSettings.color = e.target.value; lblColor.textContent = subSettings.color.toUpperCase(); saveSubSettings(); });
        inpBg.addEventListener('input', e => { subSettings.bgOpacity = parseFloat(e.target.value); lblBg.textContent = `${Math.round(subSettings.bgOpacity * 100)}%`; saveSubSettings(); });
        document.getElementById('resetSubSettings').addEventListener('click', () => { subSettings = { ...defaultSubSettings }; saveSubSettings(); updateModalInputs(); });

        function openSubModal() { updateModalInputs(); subModal.classList.remove('hidden'); subModal.classList.add('flex'); }
        function closeSubModal() { subModal.classList.add('hidden'); subModal.classList.remove('flex'); }

        document.getElementById('openSubSettings')?.addEventListener('click', openSubModal);
        document.getElementById('openSubSettingsDesktop')?.addEventListener('click', openSubModal);
        document.getElementById('closeSubSettings').addEventListener('click', closeSubModal);

        // Download Modal
        const downloadModal = document.getElementById('downloadModal');
        const downloadVideoLink = document.getElementById('downloadVideoLink');
        const downloadSubtitleLink = document.getElementById('downloadSubtitleLink');

        function openDownloadModal() {
            downloadVideoLink.href = currentVideoUrl ? `/download/api?url=${encodeURIComponent(currentVideoUrl)}` : '#';
            downloadSubtitleLink.href = currentSubtitleUrl ? `/download/api/sub?url=${encodeURIComponent(currentSubtitleUrl)}` : '#';
            downloadModal.classList.remove('hidden');
            downloadModal.classList.add('flex');
        }
        function closeDownloadModal() { downloadModal.classList.add('hidden'); downloadModal.classList.remove('flex'); }

        document.getElementById('downloadBtn')?.addEventListener('click', openDownloadModal);
        document.getElementById('downloadBtnDesktop')?.addEventListener('click', openDownloadModal);
        document.getElementById('closeDownloadModal').addEventListener('click', closeDownloadModal);

        // Share
        document.getElementById('shareBtn').addEventListener('click', async () => {
            if (navigator.share) {
                try { await navigator.share({ title: '<%= shortPlayName %>', url: window.location.href }); } catch (e) {}
            } else {
                navigator.clipboard.writeText(window.location.href);
                alert('Link disalin!');
            }
        });

        // Episode Modal (Mobile)
        const episodeModal = document.getElementById('episodeModal');
        document.querySelectorAll('.openModal').forEach(btn => {
            btn.addEventListener('click', () => { episodeModal.classList.remove('hidden'); });
        });
        document.getElementById('closeModal')?.addEventListener('click', () => { episodeModal.classList.add('hidden'); });
        document.getElementById('modalBackdrop')?.addEventListener('click', () => { episodeModal.classList.add('hidden'); });

        // Close modals on backdrop click
        downloadModal.addEventListener('click', e => { if (e.target === downloadModal) closeDownloadModal(); });
        subModal.addEventListener('click', e => { if (e.target === subModal) closeSubModal(); });
    });
    </script>
</body>
</html>
